<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_button_white_clickable"
    android:clickable="true"
    android:gravity="center_vertical"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_modal_user_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_smiling_baby" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.nguyencse.todo.custom.TextViewCSE
            android:id="@+id/txt_item_modal_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="Quý Ngọc Nguyễn"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <com.nguyencse.todo.custom.TextViewCSE
            android:id="@+id/txt_item_modal_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="nguyenict.uit@gmail.com"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>