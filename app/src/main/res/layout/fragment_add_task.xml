<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:elevation="8dp">

            <LinearLayout
                android:id="@+id/lnl_adding_task_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_clickable_rectangle_brown"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:paddingStart="15dp">

                <com.nguyencse.todo.custom.TextViewCSE
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:text="@string/date_not_2_dot"
                    android:textColor="@color/colorPrimaryDark" />

                <com.nguyencse.todo.custom.TextViewCSE
                    android:id="@+id/txt_adding_task_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_calendar" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:elevation="8dp">

            <LinearLayout
                android:id="@+id/lnl_adding_task_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_clickable_rectangle_brown"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:paddingStart="15dp">

                <com.nguyencse.todo.custom.TextViewCSE
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:text="@string/time_not_2_dot"
                    android:textColor="@color/colorPrimaryDark" />

                <com.nguyencse.todo.custom.TextViewCSE
                    android:id="@+id/txt_adding_task_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_clock" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:elevation="8dp"
            android:orientation="vertical">

            <com.nguyencse.todo.custom.EditTextCSE
                android:id="@+id/edt_adding_task_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_rect"
                android:elevation="8dp"
                android:hint="@string/task_name"
                android:inputType="text|textNoSuggestions"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="14sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:elevation="8dp"
            android:orientation="vertical">

            <com.nguyencse.todo.custom.EditTextCSE
                android:id="@+id/edt_adding_task_detail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_rect"
                android:elevation="8dp"
                android:gravity="top"
                android:hint="@string/task_detail"
                android:inputType="text|textNoSuggestions"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="14sp" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_upload_to_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_upload"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_cancel_upload_to_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_delete"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>